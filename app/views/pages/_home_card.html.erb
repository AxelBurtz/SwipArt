    <div class="text_infos">
      <h1><%= artwork.title %></h1>
      <h2><%= artwork.author.name %></h2>
    </div>
    <div class="tag_infos">
      <div class="tag_bubble_infos">
        <p class="tag_text_infos"><%= artwork.mouvement %></p>
      </div>
      <div class="tag_bubble_infos">
